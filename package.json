{
  "name": "portfolio",
  "version": "0.2.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run build:remix && run build:server",
    "build:remix": "remix vite:build",
    "build:server": "tsx ./other/build-server.ts",
    "dev": "tsx watch --clear-screen=false --ignore '.cache/**' --ignore 'app/**' --ignore 'vite.config.ts.timestamp-*' --ignore 'build/**' --ignore 'node_modules/**' --inspect ./server/index.ts",
    "start": "cross-env NODE_ENV=production node ./server-build/index.js",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
